<%- model_class = Model1 -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:field1) %>:</strong></dt>
  <dd><%= @model1.field1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:field2) %>:</strong></dt>
  <dd><%= @model1.field2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:field3) %>:</strong></dt>
  <dd><%= @model1.field3 %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              model1s_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_model1_path(@model1), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              model1_path(@model1),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
