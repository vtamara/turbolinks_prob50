<%- model_class = Model1 -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:field1) %></th>
      <th><%= model_class.human_attribute_name(:field2) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @model1s.each do |model1| %>
      <tr>
        <td><%= link_to model1.id, model1_path(model1) %></td>
        <td><%= model1.field1 %></td>
        <td><%= model1.field2 %></td>
        <td><%=l model1.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      model1_path(model1), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_model1_path(model1), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      model1_path(model1),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_model1_path,
            :class => 'btn btn-primary' %>
